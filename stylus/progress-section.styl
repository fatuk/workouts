.progress-section
    padding-bottom 90px
    &__title
        margin-bottom 20px
        .pink
            color #D966A9
        .blue
            color #40AEEB
        .orange
            color #EF8F14
    &__list
        width 839px
        height 350px
        position relative
        list-style none
        padding 0
        margin 0 auto
    &__item
        position absolute
        width 180px
        height 180px
        &.last
            right 0
            left inherit
        &.second
            left 50%
            margin-left -90px
            margin-top 68px
    &__img
        position absolute
        top 0
        left 0
    &__img-full
        position absolute
        bottom 0
        left 0
        width 180px
        height 0
        overflow hidden
    &__img-full-i
        position absolute
        bottom 0
        left 0
        width 180px
        height 180px
    &__counter
        width 100%
        font-size 50.49px
        position absolute
        bottom -90px
        &.pink
            color #D966A9
        &.blue
            color #40AEEB
        &.orange
            color #EF8F14
    &__block
        clearfix()
        border solid 1px #67717A
        margin-top 65px
    &__block-img
        width 487px
        float left
        padding-left 64px
        padding-bottom 19px
        padding-top 7px
    &__block-text
        float left
        font-size 52.5px
        color #f5faff
        text-align left
        padding-left 40px
        padding-top 5px