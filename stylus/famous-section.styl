.famous-section
    padding-bottom 280px
    &__content
        position relative
    &__salut
        position absolute
        top 0
        left 0
    &__info
        position absolute
        right 84px
        bottom -200px
    &__info-list
        list-style none
        padding 0
        margin 0
        clearfix()
    &__info-item
        float left
        margin-right 5px
        &:last-child
            margin-right 0
    &__info-text
        font-size 32px
        color #9babba
        text-align left
        margin-top 10px
        line-height 45px
        strong
            color #f5faff
