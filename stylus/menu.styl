.main-menu
    display inline-block
    &__list
        list-style none
        padding 0
        margin 0
        display inline-block
        clearfix()
    &__item
        float left
        margin-right 38px
        &:last-child
            margin-right 0
    &__link
        transition opacity .3s
        &:hover
            opacity .75
        &_inactive
            opacity .4 !important
    &_right
        float right
    &_center
        display block
        width 370px
        margin 0 auto