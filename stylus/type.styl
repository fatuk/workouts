@font-face
    font-family 'FuturaPTWebLight'
    src url('FTN35__W.eot')
    src local('Futura PT Web Light'), local('FuturaPTWebLight'),
      url('../fonts/FTN35__W.eot?#iefix') format('embedded-opentype'),
         url('../fonts/FTN35__W.woff') format('woff'),
         url('../fonts/FTN35__W.ttf') format('truetype'),
         url('../fonts/FTN35__W.svg#FuturaPTWeb-Light') format('svg')
    font-weight normal
    font-style normal

body
    font-family 'FuturaPTWebLight'

h1
    font-size 60px
    color $orange
    font-weight normal
    display inline-block
    text-align center
    margin-top 68px